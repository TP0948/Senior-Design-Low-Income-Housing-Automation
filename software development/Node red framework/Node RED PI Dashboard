Exec Node Temp #current system disk usage
     commnad: df -h
     
     
    
            Function Sub String Node 
                Code: var re = /([0-9]{2})%/
                      var idx = msg.payload.search(re);
                      var str = msg.payload;
                      if (idx >=0) {
                      str = msg.payload.substring(idx, idx + 2);
                      }
                      msg.payload = str;
                      return msg;
    
                    
